{
    "name": "@mattermost/testcontainers",
    "version": "0.2.0",
    "description": "CLI and library for managing Mattermost test environments using Docker containers with automatic port allocation, subpath routing, HA clustering, and isolated dependencies",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mattermost/mattermost.git"
    },
    "bugs": {
        "url": "https://github.com/mattermost/mattermost/issues"
    },
    "homepage": "https://github.com/mattermost/mattermost/tree/master/e2e-tests/testcontainers#readme",
    "type": "commonjs",
    "files": [
        "dist"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "testcontainers": "./dist/cli.js"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.js"
        }
    },
    "keywords": [
        "mattermost",
        "e2e-test",
        "testcontainers",
        "docker",
        "test-automation"
    ],
    "scripts": {
        "build": "rollup -c --bundleConfigAsCjs",
        "postbuild": "chmod +x dist/cli.js",
        "build:watch": "npm run build -- --watch",
        "tsc": "tsc --noEmit",
        "lint": "eslint .",
        "prettier": "prettier . --check",
        "prettier:fix": "prettier --write .",
        "check": "npm run lint && npm run prettier && npm run tsc",
        "test": "node --import tsx --test src/**/*.test.ts src/**/**/*.test.ts",
        "test:integration": "TC_DOCKER_TESTS=true node --import tsx --test --test-concurrency=1 src/integration/**/*.test.ts src/integration/**/**/*.test.ts",
        "test:integration:ha": "TC_DOCKER_TESTS=true node --import tsx --test --test-concurrency=1 src/integration/ha/**/*.test.ts",
        "test:all": "TC_DOCKER_TESTS=true node --import tsx --test --test-concurrency=1 src/**/*.test.ts src/**/**/*.test.ts",
        "clean": "rm -rf dist node_modules package-lock.json *.tsbuildinfo",
        "prepublishOnly": "npm run check && npm run build",
        "publish:dry-run": "npm publish --dry-run",
        "publish:prerelease": "npm publish --tag next",
        "publish:release": "npm publish"
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@testcontainers/postgresql": "11.11.0",
        "chalk": "5.6.2",
        "commander": "14.0.3",
        "dotenv": "17.2.4",
        "jsonc-parser": "3.3.1",
        "testcontainers": "11.11.0",
        "zod": "4.3.6"
    },
    "devDependencies": {
        "@eslint/eslintrc": "3.3.3",
        "@eslint/js": "9.39.2",
        "@rollup/plugin-commonjs": "29.0.0",
        "@rollup/plugin-json": "6.1.0",
        "@rollup/plugin-node-resolve": "16.0.3",
        "@rollup/plugin-typescript": "12.3.0",
        "@types/node": "25.2.2",
        "@typescript-eslint/eslint-plugin": "8.54.0",
        "@typescript-eslint/parser": "8.54.0",
        "eslint": "9.39.2",
        "eslint-import-resolver-typescript": "4.4.4",
        "eslint-plugin-header": "3.1.1",
        "eslint-plugin-import": "2.32.0",
        "prettier": "3.8.1",
        "rollup": "4.57.1",
        "tslib": "2.8.1",
        "tsx": "^4.21.0",
        "typescript": "5.9.3"
    }
}
