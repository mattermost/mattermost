{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2022",
        "declaration": true,
        "declarationDir": "dist",
        "strict": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "composite": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "noEmit": true,
        "baseUrl": "."
    },
    "include": ["./**/*"],
    "exclude": ["node_modules", "playwright-report", "lib"]
}
