# Base on the official postgres:13 image
FROM postgres:13

# Install build dependencies, build pg_bigm, and then clean up
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        build-essential \
        postgresql-server-dev-13 \
        git \
        ca-certificates && \
    git clone --depth 1 --branch REL_3_0 https://github.com/pgbigm/pg_bigm.git /usr/src/pg_bigm && \
    cd /usr/src/pg_bigm && \
    make USE_PGXS=1 && \
    make USE_PGXS=1 install && \
    apt-get purge -y --auto-remove \
        build-essential \
        postgresql-server-dev-13 \
        git && \
    rm -rf /var/lib/apt/lists/* && \
    rm -rf /usr/src/pg_bigm