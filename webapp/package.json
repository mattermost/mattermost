    "webpack-dev-server": "5.2.2"
  },
  "overrides": {
    "@deanwhillier/jest-matchmedia-mock": {
      "jest": "30.1.3"
    },
    "@giphy/react-components": {
      "styled-components": "5.3.6"
    },
    "@types/redux-mock-store": {
      "redux": "5.0.1"
    },
    "braces": "3.0.3",
    "cheerio": "1.0.0-rc.12",
    "@testing-library/dom": {
      "dom-accessibility-api": "0.6.3"
    },
    "@testing-library/jest-dom": {
      "dom-accessibility-api": "0.6.3"
    },
    "@types/estree": "0.0.51",
    "asn1.js": "5.4.1",
    "react-beautiful-dnd": {
      "react-redux": "9.2.0"
    },
    "redux-persist": {
      "redux": "5.0.1"
    }
  },
  "workspaces": [
    "channels",
    "platform/client",
    "platform/components",
    "platform/eslint-plugin",
    "platform/mattermost-redux",
    "platform/types"
  ]
