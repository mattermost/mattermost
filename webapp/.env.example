# Vite Environment Variables
# Copy this file to .env.local for local development

# API endpoint for backend server
VITE_API_URL=http://localhost:8065

# WebSocket URL for real-time updates
VITE_WS_URL=ws://localhost:8065

# Public path for assets
VITE_PUBLIC_PATH=/

# Enable source maps in production (true/false)
VITE_SOURCEMAP=false

# Bundle analyzer (true/false)
VITE_BUNDLE_ANALYZER=false

# Development server port
VITE_PORT=9005

# HMR (Hot Module Replacement) port
VITE_HMR_PORT=9006

# Enable performance monitoring
VITE_PERF_MONITORING=false

# Node environment
NODE_ENV=development