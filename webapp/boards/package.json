		"imagemin-svgo": "^10.0.1",
		"imagemin-webp": "7.0.0",
		"isomorphic-fetch": "3.0.0",
		"jest": "27.5.1",
		"jest-canvas-mock": "2.3.1",
		"jest-junit": "13.0.0",
		"jest-mock": "27.5.1",
		"prettier": "^2.6.1",
		"redux-mock-store": "^1.5.4",
		"sass": "1.49.9",
		"sass-loader": "12.6.0",
		"start-server-and-test": "^1.14.0",
		"style-loader": "3.3.1",
		"stylelint": "^14.6.1",
		"stylelint-config-sass-guidelines": "^9.0.1",
		"ts-loader": "9.4.2",
		"typescript": "4.6.2",
