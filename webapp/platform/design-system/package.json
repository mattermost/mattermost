  "private": true,
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "styles": "dist/index.esm.css",
  "scripts": {
    "build": "rollup -c",
    "check": "eslint --ext .js,.jsx,.tsx,.ts ./src --quiet",
    "fix": "eslint --ext .js,.jsx,.tsx,.ts ./src --quiet --fix --cache",
    "check-types": "tsc -b",
    "run": "rollup -c --watch",
    "test": "cross-env TZ=Etc/UTC jest",
    "test:updatesnapshot": "cross-env TZ=Etc/UTC jest --updateSnapshot",
    "test-ci": "cross-env TZ=Etc/UTC jest",
    "clean": "rm -rf dist node_modules tsconfig.tsbuildinfo .rollup.cache"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@mattermost/types": "^11.3.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "11.1.6",
    "@testing-library/jest-dom": "6.8.0",
    "@types/jest": "28.1.8",
    "@types/lodash": "^4.14.178",
    "@types/react": "18.2.64",
    "@types/react-bootstrap": "^0.32.35",
    "@types/react-dom": "18.2.25",
    "@types/scheduler": "0.16.8",
    "@types/shallow-equals": "^1.0.0",
    "@types/styled-components": "^5.1.19",
    "babel-plugin-styled-components": "2.1.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rollup": "^2.75.7",
    "rollup-plugin-scss": "4.0.0",
    "rollup-plugin-ts": "^2.0.5",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@babel/runtime-corejs3": "^7.17.8",
    "@mattermost/compass-icons": "^0.1.52",
    "classnames": "^2.3.1",
    "lodash": "^4.17.21",
    "react-intl": "*",
    "shallow-equals": "^1.0.0"
  },
  "dependencies": {
    "simplebar-react": "3.3.2"
  }
