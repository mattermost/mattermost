{
  "name": "@mattermost/components",
  "version": "9.2.0",
  "private": true,
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "styles": "dist/index.esm.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.esm.js"
    },
    "./dist/*": "./dist/*"
  },
  "scripts": {
    "build": "vite build && tsc -b --emitDeclarationOnly",
    "check": "eslint --ext .js,.jsx,.tsx,.ts ./src --quiet",
    "check-types": "tsc -b",
    "run": "vite build --watch",
    "test": "cross-env TZ=Etc/UTC jest",
    "test:updatesnapshot": "cross-env TZ=Etc/UTC jest --updateSnapshot",
    "test-ci": "cross-env TZ=Etc/UTC jest",
    "clean": "rm -rf dist node_modules tsconfig.tsbuildinfo"
  },
  "devDependencies": {
    "@swc/core": "1.15.3",
    "@swc/jest": "0.2.39",
    "@testing-library/jest-dom": "6.8.0",
    "@types/lodash": "^4.14.178",
    "@types/react": "18.2.64",
    "@types/react-bootstrap": "^0.32.35",
    "@types/react-dom": "18.2.25",
    "@types/scheduler": "0.16.8",
    "@types/shallow-equals": "^1.0.0",
    "@types/styled-components": "^5.1.19",
    "cross-env": "10.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@mattermost/compass-icons": "0.1.52",
    "classnames": "^2.3.1",
    "lodash": "^4.17.21",
    "react-intl": "*",
    "shallow-equals": "^1.0.0",
    "tippy.js": "^6.3.7"
  },
  "dependencies": {
    "@tippyjs/react": "4.2.6",
    "react-bootstrap": "github:mattermost/react-bootstrap#05559f4c61c5a314783c390d2d82906ee8c7e558",
    "styled-components": "5.3.7"
  }
}
