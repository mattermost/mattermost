{
  "root": true,
  "extends": [
    "plugin:@mattermost/react"
  ],
  "plugins": [
    "formatjs",
    "no-only-tests"
  ],
  "settings": {
    "import/resolver": "webpack"
  },
  "rules": {
    "react/prop-types": [
      2,
      {
        "ignore": [
          "location",
          "history",
          "component"
        ]
      }
    ],
    "react/no-unknown-property": [
      2,
      {
        "ignore": [
          "mask-type"
        ]
      }
    ],
    "react/style-prop-object": [2, {
      "allow": ["Timestamp"]
    }],
    "formatjs/no-multiple-whitespaces": 2
  },
  "overrides": [
    {
      "files": ["*.test.*", "src/tests/**"],
      "rules": {
        "no-only-tests/no-only-tests": ["error", {"focus": ["only", "skip"]}]
      }
    }
  ]
}
